source () {
    s=$1
    shift
    . $s $@
}

export source

#export PIC="-fPIC -fpie"
export PIC=""
export PATH="$PATH:/bin:/sbin:/usr/bin:/usr/local/bin"
export CFLAGS="-O2 $PIC -pipe -fno-builtin $CFLAGS"
export LDFLAGS="$PIC $LDFLAGS"
export NCPU=$(source num_cpu)
#export NTHR=$(($NCPU / 3))
export NTHR=$NCPU
export NTHRS=$NTHR
