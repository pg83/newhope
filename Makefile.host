include /runtime/Makefile.common

PATH = /cross_tools/x86_64-linux-musl-native/bin:/bin:/usr/bin:/usr/sbin/:/sbin 

/lib/libreadline.a:
	wget -O - $(readline_url) | tar --strip-components 1 -xzf -
	./configure --host=x86_64-linux-musl --prefix=/ --disable-shared --enable-static
	make
	make install

all: /lib/libreadline.a
