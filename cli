#!/usr/bin/python

import sys
import os
import signal

__file__ = os.path.abspath(__file__)


signal.signal(signal.SIGPIPE, signal.SIG_IGN)
sys.dont_write_bytecode = True

##

if __name__ == '__main__':
    with open(__file__) as f:
        data = f.read()
        data = data[:data.find('##')]

    sys.modules['__main__'].__text__ = data
    fp = os.path.dirname(__file__) + '/upm/release_me.py'

    with open(fp, 'r') as f:
        exec compile(f.read() + '\n\nbootstrap(2)\n', fp, 'exec') in globals()

    sys.exit(0)
